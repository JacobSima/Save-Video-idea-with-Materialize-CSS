 {{#each ideas}}
 <h4 style="text-align:center"></h4>
 <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{title}} 
            <form method="POST" action="/ideas/{{_id}}?_method=DELETE" style="margin-top:0">
              <input type="hidden" name="_method" value="DELETE">
              <button class="blue-grey darken-1"style="float:right;cursor:pointer;border:none" type="submit">
              <i class="material-icons red-text">delete</i>
              </button>
            </form> 
            <a href="/ideas/{{_id}}" style="float:right;margin:0 5px 0 5px"><i class="material-icons ">edit</i></a>
          
          </span>
          <p>{{details}}</p>
        </div>
      </div>
    </div>
  </div>
 {{else}}
    <p>No idea Listed...</p>
 {{/each}}
 


       