 <h3 style="text-align:center">Add Idea Form</h3>
 <div class="row">
    <form class="col s12" method="post" action="/ideas">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <input id="title" type="text" class="validate" name="title" value={{title}}>
          <label for="title">Title</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">mode_edit</i>
          <textarea id="details" class="materialize-textarea" name="details">{{details}}</textarea>
          <label for="details">Details</label>
        </div>
         <button class="btn waves-effect waves-light" type="submit">Submit
    <i class="material-icons right">send</i>
  </button>
      </div>
    </form>
  </div>
        